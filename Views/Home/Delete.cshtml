@model Product

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h2>Confirm Deletion</h2>
        <p>Are you sure you want to delete the product "<strong>@Model.Name</strong>"?</p>

        <form asp-action="Delete" asp-controller="Home" method="post">
            <input type="hidden" asp-for="ProductId" />
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
            <a asp-action="AdminProducts" asp-controller="Home" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
